---
const { platform, username } = Astro.props;

function getSocialUrl(platform: string, username: string) {
  const p = platform.toLowerCase();

  if (p === "linkedin") return `https://www.linkedin.com/in/${username}`;

  return `https://www.${p}.com/${username}`;
}
---
<a href={getSocialUrl(platform, username)} target="_blank" rel="noopener noreferrer">
  {platform}
</a>

<style>
  a {
    color: rgb(0, 0, 0);
    background-color: white;
    border-radius: 0.5rem;
    text-decoration: none;
    padding: 0.4em;
    text-align: center;
    display: inline-block;
  }
  a:hover {
    color: white;
    background-color: rgb(0, 0, 0);
  }
</style>
